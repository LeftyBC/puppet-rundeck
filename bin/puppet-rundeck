$:.unshift(File.expand_path(File.join(File.dirname(__FILE__), "..", "lib")))

require 'rubygems'
require 'puppet-rundeck'
require 'mixlib/cli'

class PuppetRundeckCLI
  include Mixlib::CLI
 
   option :config_file,
      :short => "-c CONFIG",
      :long  => "--config CONFIG",
      :default => 'config.rb',
      :description => "The Puppet configuration file to use"

   option :username,
     :short => "-u USERNAME",
     :long => "--username USERNAME",
     :default => ENV['USER'],
     :description => "The Username for Rundeck to SSH as"

   option :puppet_server,
     :short => "-w PUPPET_SERVER",
     :long => "--web-ui-url PUPPET_SERVER",
     :description => "The Puppet Server"

   option :port,
     :short => "-p PORT",
     :long => "--port PORT",
     :description => "The port to run on, default 8144",
     :default => 8144
end

cli = PuppetRundeckCLI.new
cli.parse_options

PuppetRundeck.config_file = cli.config[:config_file]
PuppetRundeck.username = cli.config[:username]
PuppetRundeck.puppet_server = cli.config[:puppet_server]
PuppetRundeck.configure

PuppetRundeck.run! :host => "localhost", :port => cli.config[:port] 

